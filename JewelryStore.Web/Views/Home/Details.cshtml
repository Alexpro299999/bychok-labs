@model JewelryStore.Domain.Models.Product

<div class="card mt-4">
    <div class="row no-gutters">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="card-img" alt="@Model.Name" style="max-height: 400px; object-fit: contain;">
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <h4 class="text-primary">@Model.Price руб.</h4>
                <p class="card-text mt-3">@Model.Description</p>
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong>Материал:</strong> @Model.Material</li>
                    <li class="list-group-item"><strong>Категория:</strong> @Model.Category?.Name</li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-success btn-lg">В корзину</a>
                }
                else
                {
                    <div class="alert alert-warning">Для заказа необходимо войти.</div>
                }
                <a href="/" class="btn btn-secondary mt-2">Вернуться в каталог</a>
            </div>
        </div>
    </div>
</div>